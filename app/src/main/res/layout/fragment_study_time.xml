<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Study_timeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="fill_vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/study_time_home_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="30dp"
                android:adjustViewBounds="true"
                android:background="#F8F8F8"
                tools:ignore="SpeakableTextPresentCheck"
                android:src="@drawable/home"
                android:contentDescription="Home Button" />

            <TextView
                android:id="@+id/study_time_record"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginStart="39dp"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/study_time"
                android:textSize="30sp" />
        </LinearLayout>

        <View
            android:id="@+id/line47"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginTop="8dp"
            android:background="#CEA1F1" />

        <TextView
            android:id="@+id/total_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center_horizontal|top"
            android:text="@string/total_time"
            android:textSize="50sp" />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/study_time_recycler_view"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/fragment_subjecttimer"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/add_button"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="30dp"
        android:contentDescription="@string/add_button"
        android:src="@drawable/add_button_resize"/>

</FrameLayout>